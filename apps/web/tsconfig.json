{
  "extends": "@edu-hub/config/tsconfig/nextjs",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "auth.ts",
    "middleware.ts"
  ],
  "exclude": ["node_modules"]
}
